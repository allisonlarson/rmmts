<div class="payments">
  <%= render "/shared/sidebar" %>

  <div class="main-content">
    <%= render "/shared/user_nav" %>


    <div class="content">
      <h3>Payments</h3>
      <table class="payments-table">
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>Pay to</th>
          <th>State</th>
        </tr>
        <% @payments.each do |payment| %>
          <tr>
            <td><%= payment.expense.name %></td>
            <td><%= payment.amount %></td>
            <td><%= payment.payee.name %></td>
            <td><%= payment.state %></td>
            <td>
              <% if !payment.success? %>
                <%= link_to "Pay", society_user_payment_pay_path(payment_id: payment.id), method: "POST", class: "btn" %>
              <% end %>
        </tr>
      <% end %>
      </table>

      <h3>Collections</h3>
      <table class="collections-table">
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>Pay to</th>
          <th>State</th>
        </tr>
        <% @collections.each do |collection| %>
          <tr>
            <td><%= collection.expense.name %></td>
            <td><%= collection.amount %></td>
            <td><%= collection.payer.name %></td>
            <td><%= collection.state %></td>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
