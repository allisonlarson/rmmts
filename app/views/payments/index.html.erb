<div class="payments">
  <%= render "/shared/sidebar" %>

  <div class="main-content">
    <%= render "/shared/user_nav" %>


    <div class="content">
      <table class="payments-table">
        <tr>
          <th>Name</th>
          <th>Amount</th>
          <th>Pay to</th>
          <th>State</th>
        </tr>
        <% @payments.each do |payment| %>
          <tr>
            <td><%= payment.expense.name %></td>
            <td><%= payment.amount %></td>
            <td><%= payment.payee.name %></td>
            <td><%= payment.state %></td>
            <td><%= link_to "Pay", society_user_payment_pay_path(payment_id: payment.id), method: "POST", class: "btn" %>
          </tr>
        <% end %>
      </table>
    </div>
  </div>
